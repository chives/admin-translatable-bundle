{% extends '@FSiAdmin/Form/form_theme.html.twig' %}

{% block form_start %}
    {{ parent() }}
    <script type="text/javascript">
        requirejs.config({paths: {"translatable": "{{ asset('bundles/fsiadmintranslatable/translatable') }}"}});
        require(['translatable']);
    </script>
{% endblock form_start %}

{%- block form_label_class -%}
    {{ parent() }}
    {%- if translatable is defined and translatable %} translatable{% endif -%}
    {%- if not_translated is defined and not_translated %} not_translated{% endif -%}
{%- endblock form_label_class -%}
