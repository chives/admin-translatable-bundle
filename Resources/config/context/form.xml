<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin_translatable.context.form.class">FSi\Bundle\AdminTranslatableBundle\Doctrine\Admin\Context\FormElementContext</parameter>
        <parameter key="admin_translatable.context_builder.form.class">FSi\Bundle\AdminTranslatableBundle\Doctrine\Admin\Context\FormElementContextBuilder</parameter>
        <parameter key="admin_translatable.context.crud_form.class">FSi\Bundle\AdminTranslatableBundle\Doctrine\Admin\Context\TranslatableCRUDFormElementContext</parameter>
        <parameter key="admin_translatable.context_builder.crud_form.class">FSi\Bundle\AdminTranslatableBundle\Doctrine\Admin\Context\TranslatableCRUDFormElementContextBuilder</parameter>
    </parameters>

    <services>
        <service id="admin_translatable.context_builder.crud_form" class="%admin_translatable.context_builder.crud_form.class%">
            <argument type="service" id="admin_translatable.context.crud_form"/>
            <tag name="admin.context.builder" priority="5"/>
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false"/>
            </call>
        </service>

        <service id="admin_translatable.context.crud_form" class="%admin_translatable.context.crud_form.class%">
            <argument type="collection">
                <argument type="service" id="admin.context.form.request_handler.form_submit"/>
                <argument type="service" id="admin.context.form.request_handler.form_valid_request"/>
            </argument>
            <argument type="string">%admin_translatable.templates.crud_form%</argument>
        </service>

        <service id="admin_translatable.context_builder.form" class="%admin_translatable.context_builder.form.class%">
            <argument type="service" id="admin_translatable.context.form"/>
            <argument type="service" id="router" />
            <tag name="admin.context.builder" />
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
        </service>

        <service id="admin_translatable.context.form" class="%admin_translatable.context.form.class%">
            <argument type="collection">
                <argument type="service" id="admin.context.form.request_handler.form_submit"/>
                <argument type="service" id="admin.context.form.request_handler.form_valid_request"/>
            </argument>
            <argument type="service" id="admin_translatable.manager.locale" />
            <argument type="string">%admin_translatable.templates.form%</argument>
        </service>
    </services>
</container>
